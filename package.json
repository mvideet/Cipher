{
  "name": "cipher-desktop",
  "version": "1.0.0",
  "description": "Desktop Cipher Platform",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run backend\" \"electron .\"",
    "backend": "venv/bin/python -m uvicorn src.main:app --reload --port 8001 --host 127.0.0.1",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "com.cipher.desktop",
    "productName": "Cipher Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 